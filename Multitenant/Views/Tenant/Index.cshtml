@using System.Web
@model TenantDataViewModel


@{
    ViewData["Title"] = "Index";
    int sl = 1;
}



<style>
    table thead tr th {
        text-align: center;
    }

    table tbody tr td {
        text-align: center;
    }
</style>

<br />

<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <h5 class="card-title" style="color: black; font-weight:bold">Create New Tenant</h5>
            </div>
        </div>
        <div class="container">
            <div class="card-body">
                <form id="myForm" asp-area="MasterData" asp-controller="MasterData" asp-action="Index" method="post" enctype="multipart/form-data">
                    <div class="form-group row">
                        <label for="name" class="col-sm-4 col-form-label">Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="TenantName" name="TenantName">
                            <input type="hidden" class="form-control" id="id" name="id" value="0">
                        </div>
                    </div>
                </form>
            </div>

            <div class="card-body">
                <form id="myForm" asp-area="MasterData" asp-controller="MasterData" asp-action="Index" method="post" enctype="multipart/form-data">
                    <div class="form-group row">
                        <label for="name" class="col-sm-4 col-form-label">Contact No</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="ContactNo" name="ContactNo">
                            <input type="hidden" class="form-control" id="id" name="id" value="0">
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-body">
                <form id="myForm" asp-area="MasterData" asp-controller="MasterData" asp-action="Index" method="post" enctype="multipart/form-data">
                    <div class="form-group row">
                        <label for="name" class="col-sm-4 col-form-label">Email</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="TenantEmail" name="TenantEmail">
                            <input type="hidden" class="form-control" id="id" name="id" value="0">
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-body">
                <form id="myForm" asp-area="MasterData" asp-controller="MasterData" asp-action="Index" method="post" enctype="multipart/form-data">
                    <div class="form-group row">
                        <label for="name" class="col-sm-4 col-form-label">Address</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="Address" name="Address">
                            <input type="hidden" class="form-control" id="id" name="id" value="0">
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-body">
                <form id="myForm" asp-area="MasterData" asp-controller="MasterData" asp-action="Index" method="post" enctype="multipart/form-data">
                    <div class="form-group row">
                        <label for="name" class="col-sm-4 col-form-label">Database Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="DatabaseName" name="DatabaseName">
                            <input type="hidden" class="form-control" id="id" name="id" value="0">
                        </div>
                    </div>
                    <button type="button" onclick="saveFun()" class="btn btn-success" style="float:right; margin-top:5px;"><i class="fas fa-save"></i>Submit</button>
                    <br /><br />
                </form>
            </div>
        </div>
    </div>

    <br />

    <div class="row clearfix">
        <div class="col-12">
            <div class="card mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="font-weight-bold" style="color:black">Color List</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <table class="table table-striped table-bordered" id="sliderTable">
                        <thead>
                            <tr>
                                <th>#Sl</th>
                                <th>Name</th>
                                <th>Action</th>
                        </thead>

                        <tbody>
                            @*@foreach (var data in Model.TenantId)
                                {
                                <tr>
                                <td>@sl</td>
                                <td>@data.name</td>
                                <td>
                                <a class="btn btn-success btn-sm" onclick="Edit(@data.Id, '@data.name')" href="#"><i class="fa fa-edit"></i></a>
                                <a class="btn btn-danger btn-sm" onclick="Remove(@data.Id)" href="#"><i class="fa fa-trash-alt"></i></a>
                                </td>
                                </tr>
                                sl++;
                                }*@

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @*<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>*@
<script>

    $(document).ready(function() {

        $('#sliderTable').DataTable();

    });

    function saveFun() {

        var data = $("#myForm").serialize();
        var name = $('#name').val();

        if (name == null) {

            swal({
                title: 'Invalid Input', text: 'Please enter name!', type: 'warning', confirmButtonColor: '#3085d6', confirmButtonText: 'OK!'
            });
            return false;
        }

        $.ajax({
            url: "/MasterData/MasterData/Index",
            type: "post",
            data: data,
            success: function (response) {

                if (response == "success") {
                    swal({
                        title: 'Success!', text: 'Save Successfully!', type: 'success', showCancelButton: false, confirmButtonColor: '#3085d6', confirmButtonText: 'Ok!',
                    }).then(function () {
                        window.location.href = "/MasterData/MasterData/Index";
                    });

                }
                else {
                    swal('Warning!', 'Unable to Delete!', 'warning');
                }
            }

        });

    }

    function Edit(id, name) {

        $("#id").val(id);
        $("#name").val(name);

    }
    function Remove(Id) {

        swal({
            title: 'Are you sure?', text: 'Do you want Delete this record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, Delete it!'
        }).then(function () {

            $.ajax({
                url: "/MasterData/MasterData/DeleteColor/" + Id,
                type: "post",
                success: function (response) {

                    if (response == "success") {
                        swal({
                            title: 'Success!', text: 'Delete Successfully!', type: 'success', showCancelButton: false, confirmButtonColor: '#3085d6', confirmButtonText: 'Ok!',
                        }).then(function () {
                            window.location.href = "/MasterData/MasterColor/Index";
                        });

                    }
                    else {
                        swal('Warning!', 'Unable to Delete!', 'warning');
                    }
                }

            });
        });
    }

</script>
}